<h1>My Robots</h1>

<% @robots.each do |robot| %>
  <h3> <%= robot.name %></h3>
  <p> <%= robot.city %></p>
  <p> <%= robot.state %></p>
  <p> <%= robot.department %></p>
  <form action='robots/<%= robot.id %>' method='POST'>
    <input type='hidden' name='_method' value="DELETE">
    <input type='submit' value='delete'>
  </form>
<% end %>
